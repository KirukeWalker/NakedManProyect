if(rebote = true &amp;&amp; 
    status_sliding = false &amp;&amp; 
    x = last_x_position)
{
    rebote = false;
    status_sliding = true;
    while(place_meeting(x, y+1, obj_hielo)) y-=1; //Lo sacamos del suelo si se clava
