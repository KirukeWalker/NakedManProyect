            <string>//Reset the keys
key_up = 0;
key_down = 0;
//Get the stick
if(can_switch == true){
    key_up = gamepad_axis_value(0,gp_axislv) &lt; -0.8;
    key_down = gamepad_axis_value(0,gp_axislv) &gt; 0.8;
    alarm_set(2, 5);
    can_switch = false;
}
//Get the keys
key_up = key_up || keyboard_check_pressed(vk_up) || gamepad_button_check_pressed(0,gp_padu)/* || joystick_ypos(2) &lt; 0.2*/;
key_down = key_down || keyboard_check_pressed(vk_down) || gamepad_button_check_pressed(0,gp_padd)/* || joystick_ypos(2) &gt; 0.2*/;
key_shoot = keyboard_check(ord('C')) || gamepad_button_check(0,gp_face2)  || joystick_check_button(2, 2);

//Switch to the next location
actual_position += -key_up + key_down;
actual_position = clamp(actual_position, 0, 3);

//Move to the position
if(abs(positionY[actual_position] - y) &gt; 15){
    vspeed = sign(positionY[actual_position] - y) * 10;
}
else if(abs(positionY[actual_position] - y) &gt; 3){
    vspeed = sign(positionY[actual_position] - y);
}
else{
    vspeed = 0;
}
//Control stuff
//key_up = 0;
//key_down = 0;
//Disparo
if(key_shoot == 1){
    if(disparo == 0 &amp;&amp; status_dead == 0) {
        audio_play_sound(snd_shoot, 1, false);
        proyectil = instance_create(x,y+3,obj_cacota);
        proyectil.speed = 15;
        proyectil.direction = 90-(90*image_xscale);
        proyectil.image_xscale = image_xscale;
        //if image_xscale = 1 proyectil.direction = 0;
        //else                proyectil.direction = 180;
        disparo = 1
        alarm[0] = 15;
    }
}
//Animations
if(status_dead == 1){
    sprite_index = spr_fall;
    vspeed = -10;
    if(y &lt; 0 &amp;&amp; !instance_exists(obj_gameoverimg))
        game_over_screen = instance_create(view_xview,view_yview,obj_gameoverimg);
}
else if(disparo == 1){
    sprite_index = spr_jumpshoot;
}
else if(vspeed &lt; 0){
    sprite_index = spr_jump;
}
else{
    sprite_index = spr_fall;
}
